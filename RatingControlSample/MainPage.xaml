<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="http://www.pankaj_singh_apps.de/maui/controls"
             x:Class="RatingControlSample.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <controls:RatingControl Amount="5" CurrentValue="4.5" AccentColor="Red"  FontSize="36"/>
            <controls:RatingControl Amount="5" 
                                    CurrentValue="1" 
                                    AccentColor="Gold" 
                                    FontSize="36"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
